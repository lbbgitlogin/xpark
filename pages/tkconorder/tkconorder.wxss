/* pages/confirmationOrder/confirmationOrder.wxss */

page {
  background: #282b30;
}

.header {
  width: 730rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background: #171a1d;
  margin: 20rpx auto 0 auto;
}

.bj_pic {
  width: 93%;
  background-image: url('http://zuul.snail.highlifes.com/common/image/20190304/e2c47d77-7ecd-4868-8dbe-2fc9c28e2752.png');
  background-size: 100% 100%;
  margin: -17rpx auto 0 auto;
}

.order {
  width: 100%;
  text-align: center;
  line-height: 108rpx;
  height: 108rpx;
  font-size: 32rpx;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.order_list {
  padding: 4rpx 0 40rpx 0;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  box-shadow: 0rpx 20rpx 50rpx -15rpx #2D3135 inset
}

.order_title {
  font-size: 40rpx;
  color: #fff;
  width: 92%;
  margin: 0 auto;
}

.appointment_datails {
  width: 94%;
  margin: 0 auto;
  padding: 40rpx 0 36rpx 0;
  display: flex;
  border-bottom: 1rpx solid #5f6672;
  box-sizing: border-box;
}

.datails_imghead {
  width: 132rpx;
  height: 132rpx;
  border-radius: 132rpx;
  margin: 0 24rpx 0 0;
}

.datails_title {
  font-size: 32rpx;
  color: #fff;
  flex: 1;
}

.order_mon {
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 17rpx;
}

.num_order {
  color: #ccc;
  font-size: 26rpx;
  text-align: right;
}

.order_datails {
  padding-top: 8rpx;
  box-sizing: border-box;
}

.list_booking {
  width: 94%;
  height: 115rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #5f6672;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.order_name {
  font-size: 32rpx;
  color: #fff;
  flex: 1;
}

.order_smallname {
  color: #ccc;
  font-size: 26rpx;
  margin-right: 16rpx;
}

.tv_img {
  width: 40rpx;
  height: 40rpx;
}

.remarks {
  width: 100%;
  margin: 0 auto;
  padding: 36rpx 28rpx 0 28rpx;
  box-sizing: border-box;
}

.erweima {
  width: 100%;
  height: 416rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 36rpx 28rpx 0 28rpx;
  box-sizing: border-box;
}

.order_remarks {
  color: #666;
  font-size: 26rpx;
  line-height: 98rpx;
}

.erweima_name {
  display: flex;
  align-items: center;
}

.name_first {
  font-size: 32rpx;
  color: #333;
  margin-right: 24rpx;
}

.name_thrid {
  font-size: 26rpx;
  color: #666;
}

.pic_ewm {
  width: 264rpx;
  height: 264rpx;
  margin: 40rpx auto 36rpx auto;
  background: red;
}

.but_order {
  width: 92%;
  margin: 36rpx auto 72rpx auto;
  height: 98rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #333;
  text-align: center;
  line-height: 98rpx;
}

.input_box_input_input {
  margin: 36rpx auto 0 auto;
  width: 654rpx;
  font-size: 28rpx;
  border: 1rpx solid #5f6672;
  height: 130rpx;
  padding: 20rpx 28rpx 20rpx 28rpx;
  box-sizing: border-box;
  color: #999;
  border-radius: 8rpx;
}

.textcls {
  color: #999;
  width: 654rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-height: 130rpx;
  border: 1rpx solid #5f6672;
  margin: 36rpx auto 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
}

.order_next {
  width: 100%;
  height: 118rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  position: fixed;
  bottom: 0;
  border-radius: 0;
  line-height: 118rpx;
}