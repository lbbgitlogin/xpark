/* pages/coupon/coupon.wxss */
page {
  background: #202428;
  height: 100%;

}

.coupon_input {
  width: 100%;
  height: 160rpx;
  background: #282B30;
  margin: 0 auto;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box
}

.coutiao {
  width: 100%;
  height: 20rpx;
  background: #202428
}

.input_box {
  width: 592rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #444951;
  padding: 22rpx 28rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #999999;
  margin-right: 32rpx;
  border-radius: 4rpx;
}

.btn_tetx {
  font-size: 32rpx
}

.coupon_list {
  color: #ccc;
  font-size: 26rpx;
  margin: 32rpx 28rpx
}

.bj_coupon {
  width: 694rpx;
  height: 208rpx;
  background: url(http://zuul.snail.highlifes.com/common/image/20181219/023263f4-4914-4be6-b752-d71e59facc61.png) center no-repeat;
  background-size: 100% 100%;
  margin: 0 auto 24rpx auto
}

.bj_couponsec {
  width: 694rpx;
  height: 208rpx;
  background: url(http://zuul.snail.highlifes.com/common/image/20190117/6dcfe9df-c743-4ce4-87d4-866781745670.png) center no-repeat;
  background-size: 100% 100%;
  margin: 0 auto 24rpx auto
}

.coupon_left {
  width: 190rpx;
  float: left;
  display: flex;
  align-items: flex-end;
  justify-content: center;

}

.coupon_right {
  width: 502rpx;
  float: left;
  display: flex;
  align-items: flex-start;
  padding-top: 51rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
  padding-right: 28rpx
}

.coupon_mon {
  font-size: 28rpx;
  line-height: 169rpx;
  color: #999999
}

.coupon_maxmon {
  font-size: 96rpx;
  line-height: 217rpx;
  color: #999
}

.coupon_choose {
  width: 32rpx;
  height: 32rpx;
}

.coupon_right_mon {
  font-size: 22rpx;
  color: #666;
  flex: 1;

}

.coupon_right_name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold
}

.coupon_fal_name {
  font-size: 30rpx;
  color: #999
}

.choose_img {
  width: 32rpx;
  height: 32rpx;
}

.coupon_next {
  width: 100%;
  height: 118rpx;
  text-align: center;
  line-height: 118rpx;
  color: #fff;
  font-size: 36rpx;
  position: fixed;
  bottom: 0;

}

.hidden_box {
  background-color: #000;
  position: fixed;
  height: 100%;
  width: 100%;
  opacity: 0.6;
  z-index: 1000;
  top: 0;
  left: 0;

}

.coupon_state {
  font-size: 26rpx;

}

.coupon_right_mon_false {
  font-size: 22rpx;
  color: #999;
  flex: 1;

}

.coupon_img {
  width: 104rpx;
  height: 104rpx
}

.null_coupon {
  width: 204rpx;
  height: 148rpx;
  margin: 0 auto;
}

.bj_null {
  width: 204rpx;
  height: 148rpx;
  margin: 0 auto
}

.null_box {
  width: 100%;
  height: 100%;
  background: #282B30;
  box-sizing: border-box;

  display: flex;
  flex-direction: column;
  align-items: center;
  /*垂直居中*/
  /* justify-content: center;水平居中 */
  padding-top: 355rpx;

}

.coupon_tiao {
  width: 100%;
  height: 20rpx;
  background: #202428
}

.null_title {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 48rpx 0 0 0
}