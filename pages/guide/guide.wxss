.ra-ca-bottom_tab {
  width: 100%;
  display: flex;
  align-items: center;
}

.heand_text {
  flex: 1;
  text-align: center
}

.m-navbar-item {
  padding: 32rpx 0;
  font-size: 28rpx;
}

.m-navbar-item:after {
  border: none;
}

.m-navbar-item.m-navbar-item-on {
  background-color: #282B30;
  color: #E27D00;
}

.m-navbar-item.m-navbar-item-on::before {
  content: " ";
  position: absolute;
  left: 47%;
  bottom: 4rpx;
  right: 0;
  height: 6rpx;
  width: 36rpx;
  border-bottom: 12rpx solid #E27D00;
  color: #E27D00;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 3;
}

